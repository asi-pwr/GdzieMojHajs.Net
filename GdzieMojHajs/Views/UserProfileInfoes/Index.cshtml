@model GdzieMojHajs.ViewModels.UserProfileInfos.UserDebtsViewModel

@{
    ViewData["Title"] = "Home Page";
}

@*<div id="partialNotification">
    @Html.Partial("_WatchNotifications");
</div>*@


@* Tables will be generated automaticly *@

<div class="tables">
    <div class="col-lg-6">
        <table class="table table-striped" id="MyDebtors">
            <caption>
                <div class="col-lg-12">My Debtors</div>
                @* <div class="col-lg-1"><a asp-controller="Home" asp-action="Index" class="glyphicon glyphicon-plus" title="Add new debt"></a></div>*@
            </caption>
            <thead>
                <tr>
                    <th>#</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Ammount</th>
                    <th>Date</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OwnedDebts)
                {
                    <tr>
                        <td>
                            1
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DebtReceiver.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DebtReceiver.Surname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            <a asp-controller="Home" asp-action="Index" class="glyphicon glyphicon-comment" title="Comment"></a>
                            <a asp-controller="Home" asp-action="Index" class="glyphicon glyphicon-edit" title="Edit"></a>
                            <a asp-controller="Home" asp-action="Index" class="glyphicon glyphicon-user" title="Rewrite"></a>
                            <a asp-controller="Home" asp-action="Index" class="glyphicon glyphicon-ok" title="Pay off"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>



    <div class="col-lg-6">
        <table class="table table-striped" id="MyDebts">
            <caption>
                <div class="col-lg-12">My Debts</div>
                @*<div class="col-lg-1"><a asp-controller="Home" asp-action="Index" class="glyphicon glyphicon-plus" title="Add new debt"></a></div>*@
            </caption>
            <thead>
                <tr>
                    <th>#</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Ammount</th>
                    <th>Date</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ReceivedDebts)
                {
                    <tr>
                        <td>
                            1
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DebtOwner.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DebtOwner.Surname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            <a asp-controller="Home" asp-action="Index" class="glyphicon glyphicon-comment" title="Comment"></a>
                            <a asp-controller="Home" asp-action="Index" class="glyphicon glyphicon-edit" title="Edit"></a>
                            <a asp-controller="Home" asp-action="Index" class="glyphicon glyphicon-user" title="Rewrite"></a>
                            <a asp-controller="Home" asp-action="Index" class="glyphicon glyphicon-ok" title="Pay off"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>